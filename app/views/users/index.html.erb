<% if flash[:notice] %>
    <%= flash[:notice] %>
<% end %>


<h2>新規会員登録</h2>
<%= form_tag '/users/create', method: :post, data: { turbo:false } do%>
    <%= label_tag :uid, 'ユーザーID' %>
    <%= text_field_tag :uid %></br>
    <%= label_tag :pass, 'パスワード' %>
    <%= password_field_tag :pass %></br>
    <%= submit_tag '登録' %>
<% end %>
<%= link_to 'ログインはこちら' %>


<h2>登録ユーザー一覧</h2>

<% @users.each do |user| %>
    <div>
        <%= user.uid %>
        <%= link_to '削除', "/users/#{user.id}", data: {turbo_method: :delete} %>
    </div>
<% end %>
